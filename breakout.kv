#:kivy 2.1.0

<Ball>:
    size: 25, 25
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Paddle>:
    size: 150, 15
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<Block>:
    size: 100, 25
    canvas:
        Color:
            rgb: self.color
        Rectangle:
            pos: self.pos
            size: self.size

<BreakoutGame>:
    ball: breakout_ball
    paddle: breakout_paddle

    Label:
        font_size: 20
        x: root.x + 10
        top: root.top + 30
        text: 'Lives: ' + str(root.paddle.lives)

    Label:
        font_size: 20
        right: root.right - 10
        top: root.top + 30
        text: 'Score: ' + str(root.paddle.score)

    Paddle:
        id: breakout_paddle
        center_x: root.center_x
        y: root.y + self.height

    Ball:
        id: breakout_ball
        center_x: root.center_x
        y: breakout_paddle.top
