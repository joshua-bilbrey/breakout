#:kivy 2.1.0

<Ball>:
    size: 25, 25
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Paddle>:
    size: 150, 15
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<Block>:
    size: 100, 25
    canvas:
        Color:
            rgb: self.color
        Rectangle:
            pos: self.pos
            size: self.size

<BreakoutGame>:
    name: 'game'
    ball: breakout_ball
    paddle: breakout_paddle

    canvas:
        Rectangle:
            pos: root.x, 750
            size: root.width, 5

    Label:
        font_size: 20
        x: root.x + 10
        top: root.top + 30
        text: 'Lives: ' + str(root.paddle.lives)

    Label:
        font_size: 20
        center_x: root.center_x
        top: root.top + 30
        text: 'High Score: ' + str(root.high_score)

    Label:
        font_size: 20
        right: root.right - 10
        top: root.top + 30
        text: 'Score: ' + str(root.paddle.score)

    Paddle:
        id: breakout_paddle
        center_x: root.center_x
        y: root.y + self.height

    Ball:
        id: breakout_ball
        center_x: root.center_x
        y: breakout_paddle.top

<StartScreen>:
    BoxLayout:
        Button:
            text: 'Start game'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'game_screen'
        Button:
            text: 'Quit'

