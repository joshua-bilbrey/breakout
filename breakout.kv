#:kivy 2.1.0

<Ball>:
    size: 25, 25
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Paddle>:
    size: 150, 15
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<Block>:
    size: 100, 25
    canvas:
        Color:
            rgb: self.color
        Rectangle:
            pos: self.pos
            size: self.size

<BreakoutGame>:
    name: 'game'
    ball: breakout_ball
    paddle: breakout_paddle

    canvas:
        Rectangle:
            pos: root.x, 750
            size: root.width, 5

    Label:
        font_size: 20
        x: root.x + 10
        top: root.top + 30
        text: 'Lives: ' + str(root.paddle.lives)

    Label:
        font_size: 20
        center_x: root.center_x
        top: root.top + 30
        text: 'High Score: ' + str(root.high_score)

    Label:
        font_size: 20
        right: root.right - 10
        top: root.top + 30
        text: 'Score: ' + str(root.paddle.score)

    Paddle:
        id: breakout_paddle
        center_x: root.center_x
        y: root.y + self.height

    Ball:
        id: breakout_ball
        center_x: root.center_x
        y: breakout_paddle.top

<GameScreen>:

<StartScreen>:
    Button:
        text: 'Start game'
        background_normal: ''
        background_color: (183/255, 229/255, 221/255)
        color: 0, 0, 0
        size: (100, 25)
        size_hint: None, None
        center: (root.center_x - 110, root.center_y)
        on_press:
            root.manager.current = 'game_screen'

    Button:
        text: 'Quit'
        background_normal: ''
        background_color: (154/255, 134/255, 164/255)
        color: 0, 0, 0
        size: (100, 25)
        size_hint: None, None
        center: (root.center_x + 110, root.center_y)
        on_press: app.stop()

    Paddle:
        id: start_paddle
        size_hint: None, None
        size:
        center: (root.center_x, root.y + self.height)

    Ball:
        size_hint: None, None
        center_x: root.center_x
        y: start_paddle.top

    Block:
        size_hint: None, None
        center: root.center

    Block:
        size_hint: None, None
        center: (root.center_x + 220, root.center_y + 35)

    Block:
        size_hint: None, None
        center: (root.center_x - 220, root.center_y + 35)

    Block:
        size_hint: None, None
        center: (root.center_x - 110, root.center_y + 35)

    Block:
        size_hint: None, None
        center: (root.center_x + 110, root.center_y - 35)
